{% comment %}
  Renders a megamenu for the header.

  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      {% assign main_menu_handle = link.url | remove: '/collections/' %}
      <li>
        {%- if link.links != blank -%}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
               
               <summary
                    id="HeaderMenu-{{ link.handle }}"
                    class="header__menu-item list-menu__item link focus-inset"
                  >
                    <a href="{{ link.url }}" class="mega-menu-parent-link">
                      <span
                        {%- if link.child_active %}
                          class="header__active-menu-item"
                        {% endif %}
                      >
                        {{- link.title | escape -}}
                      </span>
                      {% render 'icon-caret' %}
                    </a>
                  </summary>
  
              <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce global-settings-popup"
                tabindex="-1"
              >
                <div class="mega-menu-row">
                  <div class="mega-menu-container col-6 unconventional-custom-height">
                    <ul
                      class="mega-menu__list page-width{% if link.levels == 1 %} mega-menu__list--condensed{% endif %}"
                      role="list"
                    >
                      {%- for childlink in link.links -%}
                        <li>
                          <a
                            id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                            href="{{ childlink.url }}"
                            class="mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}"
                            {% if childlink.current %}
                              aria-current="page"
                            {% endif %}
                          >
                            {{ childlink.title | escape }}
                          </a>
                          {%- if childlink.links != blank -%}
                            <ul class="list-unstyled" role="list">
                              {%- for grandchildlink in childlink.links -%}
                                <li>
                                  <a
                                    id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                    href="{{ grandchildlink.url }}"
                                    class="mega-menu__link link{% if grandchildlink.current %} mega-menu__link--active{% endif %}"
                                    {% if grandchildlink.current %}
                                      aria-current="page"
                                    {% endif %}
                                  >
                                    {{ grandchildlink.title | escape }}
                                  </a>
                                </li>
                              {%- endfor -%}
                            </ul>
                          {%- endif -%}
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>
                  <div class="mega-menu-container col-6" data-handle="{{ main_menu_handle }}">
                    <div class="menu-highlight-container pagination-depth-1">
                      {%- if section.blocks.size > 0 -%}
                        {%- for block in section.blocks -%}
                          {% assign parent_menu = collections[block.settings.collection] %}
                          {% if parent_menu.handle == main_menu_handle %}
                            <a href="{{ parent_menu.url }}">
                              {% if parent_menu.metafields.custom.header_menu_image != blank %}
                                <div class="verticle-img-banner-container">
                                  <img
                                    src="{{ parent_menu.metafields.custom.header_menu_image | image_url: width: auto}}"
                                    loading="lazy"
                                    width="auto"
                                    height="auto"
                                    class="motion-reduce verticle-img"
                                  >
                                </div>
                              {% endif %}
                            </a>
                            {% assign col1 = collections[block.settings.collection1] %}
                            {% assign col2 = collections[block.settings.collection2] %}
                            {% assign col3 = collections[block.settings.collection3] %}
                            {% assign col4 = collections[block.settings.collection4] %}
                            {% assign col5 = collections[block.settings.collection5] %}
                            {% assign col6 = collections[block.settings.collection6] %}
                            <div class="header-menu-separator"></div>
                            <div class="menu-highlight-slider-container">
                              <div class="collection-slider-container portrait has-pagination">
                                <div class="collection-slider-head">
                                  <h2 class="h2 collection-slider-heading">Our Special Offerings</h2>
                                </div>
                                <div class="swiper collection-slider no-image">
                                  <div class="swiper-wrapper">
                                    {% if col1.handle != blank %}
                                      <div class="swiper-slide">
                                        <a href="{{ col1.url }}">
                                          <div class="collection-card">
                                            {% if col1.metafields.custom.header_menu_image != blank %}
                                              <img
                                                src="{{ col1.metafields.custom.header_menu_image | image_url: width: auto}}"
                                                loading="lazy"
                                                width="auto"
                                                height="auto"
                                                class="img-fluid portrait-slider-img"
                                              >
                                            {% endif %}
                                          </div>
                                        </a>
                                      </div>
                                    {% endif %}
                                    {% if col2.handle != blank %}
                                      <div class="swiper-slide">
                                        <a href="{{ col2.url }}">
                                          <div class="collection-card">
                                            {% if col2.metafields.custom.header_menu_image != blank %}
                                              <img
                                                src="{{ col2.metafields.custom.header_menu_image | image_url: width: auto}}"
                                                loading="lazy"
                                                width="auto"
                                                height="auto"
                                                class="img-fluid portrait-slider-img"
                                              >
                                            {% endif %}
                                          </div>
                                        </a>
                                      </div>
                                    {% endif %}
                                    {% if col3.handle != blank %}
                                      <div class="swiper-slide">
                                        <a href="{{ col3.url }}">
                                          <div class="collection-card">
                                            {% if col3.metafields.custom.header_menu_image != blank %}
                                              <img
                                                src="{{ col3.metafields.custom.header_menu_image | image_url: width: auto}}"
                                                loading="lazy"
                                                width="auto"
                                                height="auto"
                                                class="img-fluid portrait-slider-img"
                                              >
                                            {% endif %}
                                          </div>
                                        </a>
                                      </div>
                                    {% endif %}
                                  </div>
                                </div>
                              </div>
                              <div class="collection-slider-container square  square_top_space">
                                <div class="collection-slider-head">
                                  <h2 class="h2 collection-slider-heading">Trending Collections</h2>
                                </div>
                                <div class="swiper collection-slider no-image swiper-initialized swiper-horizontal swiper-backface-hidden">
                                  <div class="swiper-wrapper">
                                    {% if col4.handle != blank %}
                                      <div class="swiper-slide">
                                        <a href="{{ col4.url }}">
                                          <div class="collection-card">
                                            {% if col4.metafields.custom.header_menu_image != blank %}
                                              <img
                                                src="{{ col4.metafields.custom.header_menu_image | image_url: width: auto}}"
                                                loading="lazy"
                                                width="auto"
                                                height="auto"
                                                class="img-fluid square-slider-img"
                                              >
                                            {% endif %}
                                          </div>
                                        </a>
                                      </div>
                                    {% endif %}
                                    {% if col5.handle != blank %}
                                      <div class="swiper-slide">
                                        <a href="{{ col5.url }}">
                                          <div class="collection-card">
                                            {% if col5.metafields.custom.header_menu_image != blank %}
                                              <img
                                                src="{{ col5.metafields.custom.header_menu_image | image_url: width: auto}}"
                                                loading="lazy"
                                                width="auto"
                                                height="auto"
                                                class="img-fluid square-slider-img"
                                              >
                                            {% endif %}
                                          </div>
                                        </a>
                                      </div>
                                    {% endif %}
                                    {% if col6.handle != blank %}
                                      <div class="swiper-slide">
                                        <a href="{{ col6.url }}">
                                          <div class="collection-card">
                                            {% if col6.metafields.custom.header_menu_image != blank %}
                                              <img
                                                src="{{ col6.metafields.custom.header_menu_image | image_url: width: auto}}"
                                                loading="lazy"
                                                width="auto"
                                                height="auto"
                                                class="img-fluid square-slider-img"
                                              >
                                            {% endif %}
                                          </div>
                                        </a>
                                      </div>
                                    {% endif %}
                                  </div>
                                </div>
                              </div>
                            </div>
                            {% break %}
                          {% endif %}
                        {%- endfor -%}
                      {%- endif -%}
                    </div>
                  </div>
                </div>
              </div>
            </details>
          </header-menu>
        {%- else -%}
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span
              {%- if link.current %}
                class="header__active-menu-item"
              {% endif %}
            >
              {{- link.title | escape -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
