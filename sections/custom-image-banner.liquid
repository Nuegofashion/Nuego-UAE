{{ 'l1-single-banner.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<style>
  .section-template--{{ section.id }}__l1_single_banner_q93ADH-padding {
    margin-top: 0px;
    padding-top: 53px;
    padding-bottom: 34px;
  }
  .single-banner_top_heading {
    font-family: 'Jost-Bold';
    font-size: clamp(20px, calc(27 * (100vw / 1440)), 32px);
    font-weight: 700;
    line-height: clamp(24px, calc(39 * (100vw / 1440)), 49px);
    margin-bottom: 16px;
    letter-spacing: 0em;
    text-align: left;
  }

  @media screen and (max-width: 768px) {
   .section-template--{{ section.id }}__l1_single_banner_q93ADH-padding {
      margin-top: 0px;
      padding-top: 35px;
    }
    .single-banner_top_heading {
      font-size: 21px;
      line-height: 30px;
      margin-left: 8px;
      margin-bottom: 8px;
      margin-top: 8px;
    }
  }
</style>
<div class="cimge-main section-{{ section.id }}-padding">
  <div class="cimge-wrap">
    <div class="cimge">
      <a href="{{ section.settings.link }}">
        <div
          class="single-img-main-div page-width section-template--{{ section.id }}__l1_single_banner_q93ADH-padding"
        >
          {% if section.settings.mob_image != blank %}
            <img
              src="{{ section.settings.mob_image | image_url: width: auto}}"
              loading="lazy"
              width="auto"
              height="auto"
              class="single-img-mob"
            >
          {% endif %}
          {% if section.settings.desk_image != blank %}
            <img
              src="{{ section.settings.desk_image | image_url: width: auto}}"
              loading="lazy"
              width="auto"
              height="auto"
              class="single-img-des"
            >
          {% endif %}
        </div>
      </a>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Custom Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "desk_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mob_image",
      "label": "Mobile Image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
