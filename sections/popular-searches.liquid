<div class="pp-search-main mb20">
  <div class="pp-search-wrap page-width">
    <div class="pp-search-header">
      {% if section.settings.title %}
        <h2 class="m0">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.subtitle %}
        <h4 class="m0 searchGrp_Title">{{ section.settings.subtitle }}</h4>
      {% endif %}
    </div>
    <div class="pp-search-list">
      <ul class="pp-search-link">
        {%- if section.blocks.size > 0 -%}
          {%- for block in section.blocks -%}
            <li>
              <a href="{{ block.settings.link }}">{{ block.settings.title }}</a>
            </li>
          {%- endfor -%}
        {%- endif -%}
      </ul>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Popular Search",
  "class": "section pp-search-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sub Title"
    }
  ],
  "blocks": [
    {
      "type": "quote",
      "name": "Link",
      "settings": [
        {
         "type":      "text",
         "id":        "title",
         "label":     "Title"
        },
        {
         "type":      "url",
         "id":        "link",
         "label":     "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Popular Search"
    }
  ]
}
{% endschema %}
